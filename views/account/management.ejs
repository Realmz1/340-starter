<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { title }) %>
</head>

<body>
    <a class="skip-link" href="#main-content">Skip to content</a>
    <div class="page">
        <%- include('../partials/header') %>
            <%- include('../partials/nav', { nav }) %>

                <main id="main-content">
                    <h1>
                        <%= title %>
                    </h1>

                    <% if (locals.notice) { %>
                        <div class="flash notice">
                            <%= notice %>
                        </div>
                        <% } %>

                            <% if (errors) { %>
                                <ul class="errors">
                                    <% errors.forEach(error=> { %>
                                        <li>
                                            <%= error.msg %>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } %>

                                    <% if (locals.accountData) { %>
                                        <h2>Welcome <%= accountData.account_firstname %>
                                        </h2>

                                        <p><a href="/account/update/<%= accountData.account_id %>">Update Account
                                                Information</a></p>
                                        <p><a href="/review/my-reviews">My Reviews</a></p>

                                        <% if (accountData.account_type==="Employee" ||
                                            accountData.account_type==="Admin" ) { %>
                                            <h3>Inventory Management</h3>
                                            <p><a href="/inv">Manage Inventory</a></p>
                                            <% } %>
                                                <% } %>
                </main>

                <%- include('../partials/footer') %>
    </div>
    <script src="/js/script.js" defer></script>
</body>

</html>